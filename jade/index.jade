                                input(type="text", name='email', placeholder="Correo Electrónico")
                        .row
                            .small-4.columns
                                label.right.inline Tele Numbre
                            .small-8.columns
                                input(type="text", name='telephone', placeholder="Número de Teléfono")
                        .row
                            .small-4.columns
                                label.right.inline Mensaje
                            .small-8.columns
                                textarea(name='message', placeholder="")
                        input(type="hidden", name='language', value="es")
                a.close-reveal-modal &#215;

